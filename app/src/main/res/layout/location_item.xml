<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    android:id="@+id/locationElement"
    android:layout_margin="@dimen/location_item_default_margin"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/location_item_background">

    <TextView
        android:id="@+id/tvLocationItemName"
        android:layout_marginStart="@dimen/location_item_margin_start"
        android:layout_marginTop="@dimen/location_item_default_margin"
        android:layout_marginBottom="@dimen/location_item_default_margin"
        android:text="@string/location_mock_name"
        android:textColor="@color/location_item_text_color"
        android:layout_width="match_parent"
        android:textSize="@dimen/location_name_text_size"
        android:layout_weight="1"
        android:layout_height="0dp"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_marginStart="@dimen/location_item_margin_start"
        android:layout_marginTop="@dimen/location_item_default_margin"
        android:layout_marginBottom="@dimen/location_item_default_margin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/tvLongitude"
            android:text="@string/longitude"
            android:textSize="@dimen/location_lat_long_text_size"
            android:textColor="@color/location_item_text_color"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvLatitude"
            android:text="@string/latitude"
            android:textSize="@dimen/location_lat_long_text_size"
            android:textColor="@color/location_item_text_color"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>